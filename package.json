{
  "name": "flare",
  "version": "0.1.0",
  "description": "Flexible Signal Monitoring Service for Monarch",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"pnpm api\" \"pnpm worker\"",
    "api": "tsx watch src/api/index.ts",
    "worker": "tsx watch src/worker/index.ts",
    "build": "tsc",
    "test": "vitest",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "zod": "^3.22.4",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.3.1",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.1.3",
    "concurrently": "^8.2.2",
    "@biomejs/biome": "^1.4.1"
  }
}
